{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "lib": ["es2017", "dom"],
    "types": ["jest", "webpack-env"],
    "paths": {
      "@uifabric/mr/lib/*": ["./src/*"],
      "@uifabric/mr": ["./src"],
      "babylonjs": ["./src/types/babylon.d.ts"]
    }
  },
  "include": ["src"]
}
